= form_for @policy_area do |f|
  -if @policy_area.errors.any?
    #error_explanation
      %h2= "#{pluralize(@policy_area.errors.count, "error")} prohibited this policy_area from being saved:"
      %ul
        - @policy_area.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save', class: 'mainbutton'
